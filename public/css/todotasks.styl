body
	background-color rgba(192,192,192,0.5)

#doing .title
	background rgba(255,153,51,0.7)

#done .title
	background rgba(102,255,102,0.7)

.drag
	background #BDBDBD	
	border-color #606060
	border-radius 10px
	border-style solid
	border-width 2px
	display inline-block
	height auto
	margin-bottom 10px
	margin-left 100px
	margin-top 10px
	min-height 30px
	min-width 250px
	padding 5px
	width auto

	img
		display inline-block
		float right
		height 20px
		margin-right 10px
		margin-top 5px
		width 20px

	p 
		display inline-block
		float left
		font-size 20px

	&:hover, &:focus, &:active
		-webkit-transform: translateY(-5px)
		transform translateY(-5px)
	
.drop
	border-radius 30px 30px 0px 0px
	border-right-style:solid;
	border-left-style:solid;
	height auto
	margin-top 20px
	min-height 200px
	min-width 200px
	width auto

header a
	float right
	margin-right 50px
	margin-top -80px

header, section, .modal-body
	text-align: center;

.over
	border-color black
	border-style dashed
	border-width 5px
	opacity: 0.4

section
	margin-left 50px
	margin-right 50px

.title
	background black
	border-radius 30px 30px 0px 0px
	color white

#todo .title
	background rgba(255,51,51,0.7)
